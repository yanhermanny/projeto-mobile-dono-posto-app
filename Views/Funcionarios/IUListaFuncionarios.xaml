<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:controls="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls.ImageButton"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projeto_mobile_dono_posto_app.Views.Funcionarios.IUListaFuncionarios"
             
             Title="IUListaFuncionarios">
    <ScrollView>
    <VerticalStackLayout>
        
        <Picker Title="Selecione um item"  SelectedIndex="0" HorizontalOptions="Fill" >
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Todos</x:String>
                    <x:String>Aprovados</x:String>
                    <x:String>Recusados</x:String>
                    <x:String>Bloqueados</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <SearchBar Placeholder="Digite aqui" SearchCommand="{Binding SearchCommand}" SearchButtonPressed="OnSearchButtonPressed" />

        <!--<Picker Title="Selecione um item" SelectedItem="{Binding SelectedItem}">
            --><!-- Itens do Picker --><!--
        </Picker>-->
        <ListView x:Name="lvFuncionarios" ItemsSource="{Binding Funcionarios}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Text="{Binding Nome}" FontSize="18" />
                            <Label Grid.Column="1" Text="{Binding NomePosto}" FontSize="16" />
                            <Label Grid.Column="2" Text="{Binding EnderecoPosto}" FontSize="14" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
            <Border BackgroundColor="WhiteSmoke">
            <Grid  VerticalOptions="End">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                    <StackLayout Grid.Column="1" Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="End">
                        <!--<Image Source="funcionarios_logo_navbar.svg"></Image>-->
                            <ImageButton Source="postos_logo_navbaf.png"  Margin="30,0"   VerticalOptions="End" HorizontalOptions="Start" />

                            <ImageButton Source="funcionarios_logo_navbar.png"  Margin="30,0"   VerticalOptions="End" HorizontalOptions="Center" />
                            <ImageButton Source="perfil_logo_navbaf.png"  Margin="30,0" VerticalOptions="End" HorizontalOptions="End"  Clicked="Btn_Perfil_Navbar_Click"/>
                       
                        
                       
                    </StackLayout>
                </Grid>

                <!-- Resto do conteúdo da página -->
            </Grid>
            </Border>
        </VerticalStackLayout>

    </ScrollView>
    
</ContentPage>