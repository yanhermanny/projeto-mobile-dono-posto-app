<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projeto_mobile_dono_posto_app.Views.Account.EditarDonoPostoview"
             Title="EditarDonoPostoview">
    <ScrollView
            Grid.Row="1"
            Padding="20"
            BackgroundColor="White"
            VerticalOptions="FillAndExpand">
        <VerticalStackLayout>
            <ImageButton Source="voltar_logo.png" MaximumWidthRequest="20" MaximumHeightRequest="20" VerticalOptions="Start" HorizontalOptions="Start"  Clicked="BtnVoltar_Click"  />

            <Label 
            Text="Editar Perfil"
            Margin="30"
            VerticalOptions="Start" 
            HorizontalOptions="Center" FontSize="Large" />

            <Label 
            Text="Nome"
             Margin="15"
            VerticalOptions="Center" 
            HorizontalOptions="Start" />


            <Entry 
            x:Name="nomeDonoPosto"
            Margin="15"
            Placeholder="Ex: Machado de Assis"/>


            <Label 
            Text="Email*"
            VerticalOptions="Center" 
            HorizontalOptions="Start" 
            Margin="15"/>

            <Entry 
            x:Name="emailDonoPosto"
            Margin="15"
            Placeholder="Ex: Email@email.com"/>

            <Label 
            Text="CPF ou CNPJ*"
            VerticalOptions="Center" 
            HorizontalOptions="Start" 
            Margin="15"/>

            <Entry 
            x:Name="cpf_cnpjDonoPosto"
            Margin="15"
            Placeholder="Digite CNPJ"/>

            <Label 
            Text="Escolha qual acesso serÃ¡ usado para fazer login:"
            VerticalOptions="Center" 
            HorizontalOptions="Start" 
            Margin="15"/>
            <HorizontalStackLayout>
                <RadioButton 
                    x:Name="rbEmail"
                    Content="Email"
                    Margin="15"/>

                <RadioButton
                    x:Name="rbCNPJ"
                    Content="CNPJ"                    
                    Margin="15"/>
            </HorizontalStackLayout>


            <Label 
            Text="Senha*"
            VerticalOptions="Center" 
            HorizontalOptions="Start" 
            Margin="15"/>
            <Entry 
            x:Name="senhaDonoPosto"
            IsPassword="True"
            Placeholder="Deve conter 6 digitos"
            Margin="15"/>

            <Label 
            Text="Confirmar Senha*"
            VerticalOptions="Center" 
            HorizontalOptions="Start" 
            Margin="15"/>
            <Entry 
            x:Name="confirmarSenhaDonoPosto"
            IsPassword="True"
            Placeholder="Repita a senha"
            Margin="15"/>

            <Label 
            Text="CEP*"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            Margin="15"/>
            <Entry 
            x:Name="cepDonoPosto"
            Placeholder="cep"
            Margin="15"/>

            <Label 
            Text="Rua"
            VerticalOptions="Center" 
            HorizontalOptions="Start" 
            Margin="15"/>
            <Entry 
            x:Name="ruaEnderecoDonoPosto"
            Placeholder="Rua"
            IsReadOnly="True"
            Margin="15"/>

            <Label 
            Text="Numero*"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            Margin="15"/>
            <Entry 
            x:Name="numeroEnderecoDonoPosto"
            Placeholder="Numero do logradouro"
            Margin="15"/>


            <Label 
            Text="Cidade"
            VerticalOptions="Center" 
            HorizontalOptions="Start" 
            Margin="15"/>
            <Entry 
            x:Name="cidadeEnderecoDonoPosto"
            Placeholder="Cidade"
            IsReadOnly="True"
            Margin="15"/>

            <Label 
            Text="UF"
            VerticalOptions="Center" 
            HorizontalOptions="Start" 
            Margin="15"/>
            <Entry 
            x:Name="ufEnderecoDonoPosto"
            Placeholder="UF"
            IsReadOnly="True"
            Margin="15"/>

            <Button 
            x:Name="btnContinuar"
            Text="Salvar"
            Margin="15"
            Clicked="Button_Continuar_Clicked"/>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>